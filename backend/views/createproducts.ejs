<%- include('./partials/header') %>

    <style>
        body {
            background: linear-gradient(135deg, #86efac 0%, #6ee7b7 50%, #34d399 100%);
            min-height: 100vh;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes slideInLeft {
            from {
                opacity: 0;
                transform: translateX(-30px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        .animate-fadeInUp {
            animation: fadeInUp 0.6s ease-out forwards;
        }

        .animate-slideInLeft {
            animation: slideInLeft 0.5s ease-out forwards;
        }

        .input-focus:focus {
            transform: scale(1.02);
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
            transition: all 0.3s ease;
        }

        .card-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

        .blue-box {
            background-color: #dbeafe;
            border: 2px solid #93c5fd;
            border-radius: 12px;
            padding: 24px;
            margin-bottom: 32px;
        }
    </style>

    <% if(success.length>0){ %>
        <div
            class="fixed top-5 left-1/2 -translate-x-1/2 z-50 p-4 rounded-lg bg-gradient-to-r from-green-500 to-emerald-500 shadow-lg animate-fadeInUp">
            <span class="inline-block text-white font-medium">
                <%= success %>
            </span>
        </div>
        <% } %>

            <div class="min-h-screen bg-gradient-to-br from-green-200 via-green-300 to-emerald-400 flex flex-col">
                <div class="container px-10 py-20 flex flex-grow">
                    <div class="w-[25%] flex h-screen flex-col items-start animate-slideInLeft">
                        <div class="bg-white/80 backdrop-blur-sm rounded-2xl p-6 shadow-lg sticky top-20">
                            <h3 class="text-lg font-bold mb-4 text-gray-800">Dashboard Menu</h3>
                            <div class="flex flex-col space-y-2">
                                <a class="block px-4 py-3 rounded-lg bg-blue-600 text-white font-medium hover:bg-blue-700 transition-all duration-300 shadow-md"
                                    href="">
                                    All Products
                                </a>
                                <a class="block px-4 py-3 rounded-lg bg-white text-gray-700 font-medium hover:bg-gray-100 transition-all duration-300 border border-gray-200"
                                    href="">
                                    Create New Product
                                </a>
                            </div>
                        </div>
                    </div>

                    <main class="w-3/4 bg-white/90 backdrop-blur-sm p-8 rounded-2xl shadow-2xl ml-4 animate-fadeInUp">
                        <h2 class="text-3xl font-bold mb-6 text-blue-700">
                            Create New Product</h2>
                        <form action="/products/create" method="post" enctype="multipart/form-data">
                            <div class="blue-box">
                                <h3 class="text-xl font-bold mb-4 text-blue-900">Product Details</h3>
                                <div class="mb-4">
                                    <label class="block mb-2 font-semibold text-gray-700">Product Image</label>
                                    <input name="image" type="file"
                                        class="w-full py-3 px-4 rounded-lg border-2 border-gray-200 input-focus bg-white">
                                </div>
                                <div class="grid grid-cols-2 gap-4">
                                    <input name="name" type="text" placeholder="Product Name"
                                        class="border-2 border-gray-200 p-3 rounded-lg w-full input-focus focus:border-blue-400 transition-all duration-300">
                                    <input name="price" type="text" placeholder="Product Price"
                                        class="border-2 border-gray-200 p-3 rounded-lg w-full input-focus focus:border-blue-400 transition-all duration-300">
                                    <input name="discount" type="text" placeholder="Discount Price"
                                        class="border-2 border-gray-200 p-3 rounded-lg w-full col-span-2 input-focus focus:border-blue-400 transition-all duration-300">
                                </div>
                            </div>

                            <div class="blue-box">
                                <h3 class="text-xl font-bold mb-4 text-blue-900">Panel Details</h3>
                                <div class="grid grid-cols-2 gap-4">
                                    <input name="bgcolor" type="text" placeholder="Background Color (#hex)"
                                        class="border-2 border-gray-200 p-3 rounded-lg w-full input-focus focus:border-blue-400 transition-all duration-300">
                                    <input name="panelcolor" type="text" placeholder="Panel Color (#hex)"
                                        class="border-2 border-gray-200 p-3 rounded-lg w-full input-focus focus:border-blue-400 transition-all duration-300">
                                    <input name="textcolor" type="text" placeholder="Text Color (#hex)"
                                        class="border-2 border-gray-200 p-3 rounded-lg w-full col-span-2 input-focus focus:border-blue-400 transition-all duration-300">
                                </div>
                            </div>
                            <button type="submit"
                                class="px-8 py-4 rounded-xl mt-3 bg-blue-600 text-white font-bold hover:bg-blue-700 transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl">
                                Create New Product
                            </button>
                            <!-- ... (your existing form code) ... -->
                        </form>
                        <% if (products && products.length> 0) { %>
                            <div class="mt-16">
                                <h3 class="text-3xl font-bold mb-6 text-blue-700">
                                    Existing Products</h3>
                                <div
                                    style="display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 24px;">
                                    <% products.forEach(function(product, index) { %>
                                        <div
                                            style="border: 5px solid #3b82f6; border-radius: 16px; padding: 20px; background: white; box-shadow: 0 10px 30px rgba(0,0,0,0.2); transition: all 0.3s;">
                                            <% if (product.image && product.image.data) { %>
                                                <div
                                                    style="width: 100%; height: 200px; border: 2px solid #93c5fd; border-radius: 12px; overflow: hidden; margin-bottom: 16px; padding: 8px; background: white; display: flex; align-items: center; justify-content: center;">
                                                    <img src="data:<%= product.image.contentType %>;base64,<%= product.image.data.toString('base64') %>"
                                                        alt="<%= product.name %>"
                                                        style="max-width: 100%; max-height: 100%; object-fit: contain;">
                                                </div>
                                                <% } else { %>
                                                    <div
                                                        style="width: 100%; height: 200px; background: linear-gradient(135deg, #e5e7eb, #d1d5db); display: flex; align-items: center; justify-content: center; margin-bottom: 16px; border-radius: 12px; border: 2px solid #9ca3af;">
                                                        <span style="color: #6b7280; font-weight: 500;">No Image</span>
                                                    </div>
                                                    <% } %>
                                                        <h4 style="font-weight: bold; font-size: 18px; color: #1f2937; margin-bottom: 12px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;"
                                                            title="<%= product.name %>">
                                                            <%= product.name %>
                                                        </h4>
                                                        <div
                                                            style="display: flex; align-items: center; justify-content: space-between; flex-wrap: wrap; gap: 8px;">
                                                            <p style="color: #374151;"><span
                                                                    style="font-size: 14px; color: #6b7280;">Price:</span>
                                                                <span
                                                                    style="font-size: 20px; font-weight: bold; color: #2563eb;">₹
                                                                    <%= product.price %></span></p>
                                                            <% if (product.discount> 0) { %>
                                                                <span
                                                                    style="padding: 4px 12px; background: linear-gradient(135deg, #ef4444, #ec4899); color: white; font-size: 14px; font-weight: bold; border-radius: 20px;">
                                                                    -₹<%= product.discount %>
                                                                </span>
                                                                <% } %>
                                                        </div>
                                        </div>
                                        <% }); %>
                                </div>
                            </div>
                            <% } %>

                    </main>
                </div>
            </div>
            <%- include('./partials/footer') %>